@using WebApplication2.Models;
@model List<Equipo>;
@{
    ViewData["title"] = "Escuela";
}


@if(Model.Count!=0)
{
            @foreach (var item in Model)
            {
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Ciudad</th>
                <th scope="col">Entrnador</th>
                <th scope="col">Editar</th>
                <th scope="col">Eliminar</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@item.Name</td>
                <td>@item.Ciudad</td>
                <td>@item.Duenio</td>
                    <td>
                        <a asp-controller="Equipo" asp-action="Editar" asp-route-id="@item.Id"
                   class="btn btn-success btnsm"><i class="bi bi-pencil-square"></i></a>
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            <i class="bi bi-trash-fill"></i>
                        </button>
                    </td>
                </tr>
        </tbody>
    </table>
    <a asp-controller="Equipo" asp-action="Crear" class="btn btn-primary">Crear equipo <i class="bi bi-plus-lg"></i></a>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Eliminar Equipo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <row class="btn-outline-danger">
                        <div class="col-md-8 ms-auto">
                            <svg xmlns="http://www.w3.org/2000/svg" width="160" height="160" fill="currentColor" class="bi bi-exclamation-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z" />
                            </svg>
                        </div>
                    </row>
                    <row>
                        <div class="col-md-8 ms-auto">
                        Deseas eliminar al @item.Name
                        </div>
                    </row>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <a asp-controller="Equipo" asp-action="Eliminar" asp-route-id="@item.Id"
                   class="btn btn-danger btnsm">Si, elminar</a>
                </div>
            </div>
        </div>
    </div>
   }
}else{
    <div class="alert alert-danger" role="alert">
            No hay Equios Registrados
    </div>
    <a asp-controller="Equipo" asp-action="Crear" class="btn btn-primary">Crear equipo <i class="bi bi-plus-lg"></i></a>
}



